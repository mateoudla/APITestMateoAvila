<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APITestMateoAvila.Views.ListViewMA"
             Title="ListViewMA">

    
  <StackLayout>
    <ListView x:Name="userListView" ItemTapped="userListView_ItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="10">
              <Label Text="{Binding FirstName}" FontSize="20"/>
              <Label Text="{Binding LastName}" FontSize="20"/>
              <Label Text="{Binding Email}" FontSize="15"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>

</ContentPage>
