    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:APITestMateoAvila.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent
            Title="API Users"
            ContentTemplate="{DataTemplate local:ListViewMA}"
